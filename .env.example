# Database
DATABASE_URL="postgresql://postgres:your_password@localhost:5433/openislamicdb"
POSTGRES_PASSWORD="your_password"

# Search infrastructure
QDRANT_URL="http://localhost:6333"
ELASTICSEARCH_URL="http://localhost:9200"
NEO4J_URI="bolt://localhost:7687"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="your_neo4j_password"

# Embeddings
OPENROUTER_API_KEY=""

# Optional
GROQ_API_KEY=""

# CORS (comma-separated origins)
ALLOWED_ORIGINS="http://localhost:3000"

# Set to "true" when running behind a trusted reverse proxy (nginx, Cloudflare, etc.)
# This enables reading client IP from X-Forwarded-For for rate limiting.
TRUSTED_PROXY="false"

# Public site URL (used by sabeel container for sitemap/OpenGraph)
SITE_URL="https://sabeel.dev"

# Shared secret between openidb and sabeel for internal-only endpoints (e.g. translation).
# Generate with: openssl rand -hex 32
INTERNAL_API_SECRET=""
